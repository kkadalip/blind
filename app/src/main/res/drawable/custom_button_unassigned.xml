<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/yellow_light"
                android:endColor="@color/yellow_darker"
                android:startColor="@color/yellow_light" />
            <!--border-->
            <!--<stroke-->
                <!--android:width="3dp"-->
                <!--android:color="@color/grey_darker" />-->
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/yellow_light_focused"
                android:endColor="@color/yellow_darker_focused"
                android:startColor="@color/yellow_light_focused" />
            <!--<stroke-->
                <!--android:width="3dp"-->
                <!--android:color="@color/grey_darker" />-->
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/grey_light_disabled"
                android:endColor="@color/grey_darker_disabled"
                android:startColor="@color/grey_light_disabled" />
            <!--<stroke-->
            <!--android:width="3dp"-->
            <!--android:color="@color/grey_darker" />-->
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/grey_dark_unassigned"
                android:endColor="@color/grey_darker_unassigned"
                android:startColor="@color/grey_dark_unassigned" />
            <!--<stroke-->
            <!--android:width="3dp"-->
            <!--android:color="@color/grey_darker" />-->
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" />
        </shape>
    </item>

</selector>
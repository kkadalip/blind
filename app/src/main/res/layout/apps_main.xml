<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="90"
        android:weightSum="100">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"
            android:weightSum="100">

            <Button
                android:id="@+id/btn1"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="generic 1"
                android:onClick="btnClickGeneric"
                android:tag="btn1"/>

            <Button
                android:id="@+id/btn2"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="generic 2"
                android:onClick="btnClickGeneric"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="100">

            <Button
                android:id="@+id/btn3"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="generic 3"
                android:onClick="btnClickGeneric" />

            <Button
                android:id="@+id/btn4"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="generic 4"
                android:onClick="btnClickGeneric" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="100">

            <Button
                android:id="@+id/btn5"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="generic 5"
                android:onClick="btnClickGeneric"/>

            <Button
                android:id="@+id/btn6"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="generic 6"
                android:onClick="btnClickGeneric"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="100">

            <Button
                android:id="@+id/btn7"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="generic 7"
                android:onClick="btnClickGeneric"/>

            <Button
                android:id="@+id/btn8"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:text="generic 8"
                android:onClick="btnClickGeneric"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:weightSum="1">

            <Button
                android:id="@+id/btnMic"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:text="@string/btnMic"
                android:onClick="btnMicClick"/>

            <Button
                android:id="@+id/btnLocale"
                style="@style/AppsActivityButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:text="@string/btnLocale"
                android:onClick="btnClickLocale"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/btnMainMenu"
            style="@style/AppsActivityButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:text="@string/btnMainMenu"
            android:onClick="btnMainMenuClick"/>

        <Button
            android:id="@+id/btnAllApps"
            style="@style/AppsActivityButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:text="@string/btnAllApps"
            android:enabled="false"/>
    </LinearLayout>
</LinearLayout>